<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="employee_survey_select_wizard_view_form" model="ir.ui.view">
        <field name="name">restaurant_hr.employee_survey_select_wizard</field>
        <field name="model">restaurant_hr.employee_survey_select_wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="manager_id" readonly="1" />
                        <field name="survey_id" options="{'no_create': True}" />
                    </group>
                    <footer>
                        <button string="Confirm" name="confirm" type="object" class="oe_highlight" />
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>