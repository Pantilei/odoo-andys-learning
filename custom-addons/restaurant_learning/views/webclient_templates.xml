<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="webl_ogin_inherit" name="Login" inherit_id="web.login">

        <xpath expr="//div[hasclass('field-login')]" position="replace">
            <div class="form-group field-login">
                <label for="login">ID / Email</label>
                <input type="text" placeholder="ID / Email" name="login" t-att-value="login" id="login" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" autofocus="autofocus" autocapitalize="off" />
            </div>
        </xpath>

    </template>


</odoo>